<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gmail.cristiandeives.smashstat">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmashStat">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AddMatchActivity"
            android:label="@string/add_new_match_title"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".EditMatchActivity"
            android:label="@string/edit_match_title"
            android:parentActivityName=".MainActivity" />
    </application>

</manifest>