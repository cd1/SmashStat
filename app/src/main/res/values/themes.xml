<resources>
    <style name="Theme.Base.SmashStat" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Primary</item>
    </style>

    <style name="Theme.SmashStat" parent="Theme.Base.SmashStat">
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/dark_pink</item>
        <item name="colorOnPrimary">@color/light_gray</item>

        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/dark_green</item>
        <item name="colorOnSecondary">@color/light_gray</item>
    </style>

    <style name="Widget.SmashStat.WelcomeText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline2</item>
    </style>
</resources>