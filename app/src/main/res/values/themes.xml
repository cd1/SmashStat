<resources>
    <style name="Theme.Base.SmashStat" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Primary</item>
    </style>

    <style name="Theme.SmashStat" parent="Theme.Base.SmashStat">
        <item name="colorPrimary">@color/pink_600</item>
        <item name="colorPrimaryVariant">@color/pink_600_dark</item>
        <item name="colorOnPrimary">@color/gray_100</item>

        <item name="colorSecondary">@color/green_600</item>
        <item name="colorSecondaryVariant">@color/green_600_dark</item>
        <item name="colorOnSecondary">@color/gray_100</item>

        <item name="colorVictory">@color/green_300</item>
        <item name="colorDefeat">@color/red_300</item>
    </style>

    <style name="Widget.SmashStat.WelcomeText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline3</item>
    </style>

    <style name="Widget.SmashStat.WelcomeSubText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1</item>
    </style>

    <style name="TextAppearance.SmashStat.MatchListText" parent="@style/TextAppearance.MaterialComponents.Body1">
        <!-- no custom changes for now, other than settings a base style -->
    </style>

    <style name="TextAppearance.SmashStat.MatchListSubText" parent="@style/TextAppearance.MaterialComponents.Caption">
        <!-- no custom changes for now, other than settings a base style -->
    </style>
</resources>