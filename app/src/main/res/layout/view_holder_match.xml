<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/intra_margin"
            android:layout_marginStart="@dimen/window_margin"
            android:layout_marginEnd="@dimen/window_margin"
            android:textAppearance="@style/TextAppearance.SmashStat.MatchListText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="King Dedede × Donkey Kong" />

        <TextView
            android:id="@+id/sub_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/window_margin"
            android:layout_marginEnd="@dimen/window_margin"
            android:layout_marginBottom="@dimen/intra_margin"
            android:textAppearance="@style/TextAppearance.SmashStat.MatchListSubText"
            app:layout_constraintTop_toBottomOf="@id/main_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="400% × 200% (damage ratio = 2)"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>